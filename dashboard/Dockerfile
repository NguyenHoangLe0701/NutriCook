# Multi-stage build ƒë·ªÉ t·ªëi ∆∞u k√≠ch th∆∞·ªõc image
# Stage 1: Build stage
FROM maven:3.9-eclipse-temurin-17 AS build

WORKDIR /app

# Copy pom.xml v√† mvnw ƒë·ªÉ cache dependencies
COPY pom.xml .
COPY mvnw .
COPY .mvn .mvn

# Download dependencies (s·∫Ω ƒë∆∞·ª£c cache n·∫øu pom.xml kh√¥ng thay ƒë·ªïi)
RUN mvn dependency:go-offline -B

# Copy source code
COPY src ./src

# Build application (skip tests ƒë·ªÉ build nhanh h∆°n)
RUN mvn clean package -DskipTests

# Stage 2: Runtime stage
FROM eclipse-temurin:17-jre-alpine

WORKDIR /app

# Install wget for health check
RUN apk add --no-cache wget

# T·∫°o user non-root ƒë·ªÉ ch·∫°y ·ª©ng d·ª•ng (b·∫£o m·∫≠t h∆°n)
RUN addgroup -S spring && adduser -S spring -G spring

# Copy JAR file t·ª´ build stage
COPY --from=build /app/target/dashboard-0.0.1-SNAPSHOT.jar app.jar

# T·∫°o entrypoint script ƒë·ªÉ x·ª≠ l√Ω Firebase credentials t·ª´ env
RUN echo '#!/bin/sh' > /entrypoint.sh && \
    echo 'set -e' >> /entrypoint.sh && \
    echo 'echo "üîç Checking environment variables..."' >> /entrypoint.sh && \
    echo '# Support both FIREBASE_SERVICE_ACCOUNT_KEY and FIREBASE_SERVICE_ACCOUNT' >> /entrypoint.sh && \
    echo 'FIREBASE_KEY="${FIREBASE_SERVICE_ACCOUNT_KEY:-${FIREBASE_SERVICE_ACCOUNT}}"' >> /entrypoint.sh && \
    echo 'echo "FIREBASE_SERVICE_ACCOUNT_KEY is set: $([ -n "$FIREBASE_SERVICE_ACCOUNT_KEY" ] && echo "YES" || echo "NO")"' >> /entrypoint.sh && \
    echo 'echo "FIREBASE_SERVICE_ACCOUNT is set: $([ -n "$FIREBASE_SERVICE_ACCOUNT" ] && echo "YES" || echo "NO")"' >> /entrypoint.sh && \
    echo 'if [ -n "$FIREBASE_KEY" ]; then' >> /entrypoint.sh && \
    echo '  echo "üìù Writing Firebase credentials to file..."' >> /entrypoint.sh && \
    echo '  echo "$FIREBASE_KEY" > /app/serviceAccountKey.json' >> /entrypoint.sh && \
    echo '  chmod 600 /app/serviceAccountKey.json' >> /entrypoint.sh && \
    echo '  export GOOGLE_APPLICATION_CREDENTIALS=/app/serviceAccountKey.json' >> /entrypoint.sh && \
    echo '  echo "‚úÖ Firebase credentials file created at: $GOOGLE_APPLICATION_CREDENTIALS"' >> /entrypoint.sh && \
    echo '  echo "üìÑ File exists: $([ -f "$GOOGLE_APPLICATION_CREDENTIALS" ] && echo "YES" || echo "NO")"' >> /entrypoint.sh && \
    echo '  echo "üìè File size: $(wc -c < "$GOOGLE_APPLICATION_CREDENTIALS") bytes"' >> /entrypoint.sh && \
    echo 'else' >> /entrypoint.sh && \
    echo '  echo "‚ö†Ô∏è  FIREBASE_SERVICE_ACCOUNT_KEY/FIREBASE_SERVICE_ACCOUNT not set, skipping Firebase credentials setup"' >> /entrypoint.sh && \
    echo 'fi' >> /entrypoint.sh && \
    echo 'echo "üöÄ Starting application..."' >> /entrypoint.sh && \
    echo 'exec java -jar app.jar "$@"' >> /entrypoint.sh && \
    chmod +x /entrypoint.sh

# Change ownership to spring user
RUN chown -R spring:spring /app

# Switch to non-root user
USER spring:spring

# Expose port (Render s·∫Ω t·ª± ƒë·ªông map PORT env variable)
EXPOSE 8080

# Health check
HEALTHCHECK --interval=30s --timeout=3s --start-period=40s --retries=3 \
  CMD wget --no-verbose --tries=1 --spider http://localhost:${PORT:-8080}/ || exit 1

# Run application v·ªõi entrypoint script
ENTRYPOINT ["/entrypoint.sh"]

